      "icons": [{ "src": "/static/images/docs-icon.png", "sizes": "96x96" }]
    },
    {
      "name": "مسح QR",
      "short_name": "QR",
      "description": "مسح رموز QR للوثائق",
      "url": "/qr-scanner/",
      "icons": [{ "src": "/static/images/qr-icon.png", "sizes": "96x96" }]
