    {
      "name": "لوحة التحكم",
      "short_name": "تحكم",
      "description": "الوصول السريع للوحة التحكم",
      "url": "/admin/",
      "icons": [{ "src": "/static/images/admin-icon.png", "sizes": "96x96" }]
    }
  ],
  "related_applications": [],
  "protocol_handlers": [
    {
      "protocol": "web+ijunion",
      "url": "/handle/%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/upload/",
      "accept": {
        "application/pdf": [".pdf"],
        "image/*": [".jpg", ".jpeg", ".png", ".gif"],
        "application/msword": [".doc"],
        "application/vnd.openxmlformats-officedocument.wordprocessingml.document": [".docx"]
      },
      "launch_type": "single-client"
    }
  ],
  "share_target": {
    "action": "/share/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["application/pdf", "image/*", ".doc", ".docx"]
        }
      ]
    }
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "edge_side_panel": {
    "preferred_width": 320
  }
}
